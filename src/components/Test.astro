<div class="demo">
  <p class="logo">aaaaaaa</p>
  <div class="item"></div>
</div>
<style>
.demo {
  background: #0020004a;
  width: 100%;
  height: 100vh;
  position: sticky;
  padding: 20px;
  top: 0;
  pointer-events: none;
}
.logo {
  font-size: 32px;
  font-weight: bold;
  color: red;
  transition: 0.5s;
}
.logo.active {
  font-size: 15px;
}
.item {
  background: red;
  width: 40px;
  height: 150px;
  position: absolute;
  bottom: -150px; /* 初期状態で画面外 */
  right: 20px;
  transition: bottom 0.3s ease; /* スムーズな表示 */
}
.item.active {
  bottom: 0; /* 表示状態 */
}
</style>
<script>
  window.addEventListener('scroll', () => {
    const item = document.querySelector('.item');
    const scrollHeight = window.scrollY; // 現在のスクロール量

    // スクロール量が800pxを超えたら .active を付与
    if (scrollHeight > 200) {
      item.classList.add('active');
    } else {
      item.classList.remove('active');
    }
  });
</script>
